---
import type { CollectionEntry } from "astro:content";
import { formatDate } from "@/utils";
import Tags from "@/components/blog/Tag.astro";

const { blog } = Astro.props;

interface Props {
	blog: CollectionEntry<"blog">;
}
---

<div class="max-w-md mx-auto">
	<div class="bg-white rounded-lg overflow-hidden shadow-lg">
		<a href={`/blogs/${blog.data.slug}`}>
			<img
				src={`/blogs/${blog.data.image}`}
				alt={blog.data.slug}
				class="w-full h-48 object-cover hover:opacity-75 transition duration-300 ease-in-out"
			/>
		</a>
		<div class="p-6">
			<h2 class="line-clamp-2 text-2xl font-semibold mb-2">
				<a href={`/blogs/${blog.data.slug}`}>
					{blog.data.title}
				</a>
			</h2>
			<p class="text-gray-600 text-sm mb-4">
				{formatDate(blog.data.pubDate)}
			</p>
			<Tags tags={blog.data.tags} />
		</div>
	</div>
</div>
